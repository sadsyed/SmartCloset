<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        style="@style/InputLinearLayout"
        android:id="@+id/userNameLinearLayout">

        <TextView
            style="@style/InputLabelTextView"
            android:text="User Name"
            android:id="@+id/userNameTextViewLabel" />

        <EditText
            style="@style/InputEditTextView"
            android:id="@+id/userNameEditText" />

    </LinearLayout>

    <LinearLayout
        style="@style/InputLinearLayout"
        android:id="@+id/firstNameLinearLayout"
        android:layout_below="@id/userNameLinearLayout">

        <TextView
            style="@style/InputLabelTextView"
            android:text="First Name"
            android:id="@+id/firstNameTextViewLabel" />

        <EditText
            style="@style/InputEditTextView"
            android:id="@+id/firstNameEditText" />

    </LinearLayout>

    <LinearLayout
        style="@style/InputLinearLayout"
        android:id="@+id/lastNameLinearLayout"
        android:layout_below="@id/firstNameLinearLayout">

        <TextView
            style="@style/InputLabelTextView"
            android:text="Last Name"
            android:id="@+id/lastNameTextViewLabel" />

        <EditText
            style="@style/InputEditTextView"
            android:id="@+id/lastNameEditText" />

    </LinearLayout>

    <LinearLayout
        style="@style/InputLinearLayout"
        android:id="@+id/emailLinearLayout"
        android:layout_below="@id/lastNameLinearLayout">

        <TextView
            style="@style/InputLabelTextView"
            android:text="Email"
            android:id="@+id/emailTextViewLabel" />

        <EditText
            style="@style/InputEditTextView"
            android:id="@+id/emailEditText" />

    </LinearLayout>

    <LinearLayout
        style="@style/InputLinearLayout"
        android:layout_below="@id/emailLinearLayout"
        android:id="@+id/linearLayout">

        <TextView
            style="@style/InputLabelTextView"
            android:text="Pin"
            android:id="@+id/pinTextViewLabel" />

        <EditText
            style="@style/InputEditTextView"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/passwordEditText"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submitProfileButton"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>

</RelativeLayout>
