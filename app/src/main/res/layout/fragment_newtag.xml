        android:layout_alignParentStart="true"
        android:hint="@string/newtag_article_id"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/newtag_id_button"
        android:id="@+id/updateArticleIdButton"
        android:layout_below="@+id/articleId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

