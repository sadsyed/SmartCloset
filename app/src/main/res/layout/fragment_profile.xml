<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="ssar.smartcloset.ProfileFragment"
    android:textAlignment="center">

    <LinearLayout
        style="@style/InputLinearLayout"
        android:id="@+id/userNameLinearLayout">

        <TextView
            style="@style/InputLabelTextView"
            android:text="User Name"
            android:id="@+id/userNameTextViewLabel" />

        <EditText
            style="@style/InputEditTextView"
            android:id="@+id/userNameEditText" />

    </LinearLayout>

    <LinearLayout
        style="@style/InputLinearLayout"
        android:id="@+id/firstNameLinearLayout"
        android:layout_below="@id/userNameLinearLayout">

        <TextView
            style="@style/InputLabelTextView"
            android:text="First Name"
            android:id="@+id/firstNameTextViewLabel" />

        <EditText
            style="@style/InputEditTextView"
            android:id="@+id/firstNameEditText" />

    </LinearLayout>

    <LinearLayout
        style="@style/InputLinearLayout"
        android:id="@+id/lastNameLinearLayout"
        android:layout_below="@id/firstNameLinearLayout">

        <TextView
            style="@style/InputLabelTextView"
            android:text="Last Name"
            android:id="@+id/lastNameTextViewLabel" />

        <EditText
            style="@style/InputEditTextView"
            android:id="@+id/lastNameEditText" />

    </LinearLayout>

    <LinearLayout
        style="@style/InputLinearLayout"
        android:id="@+id/emailLinearLayout"
        android:layout_below="@id/lastNameLinearLayout">

        <TextView
            style="@style/InputLabelTextView"
            android:text="Email"
            android:id="@+id/emailTextViewLabel" />

        <EditText
            style="@style/InputEditTextView"
            android:id="@+id/emailEditText" />

    </LinearLayout>

</RelativeLayout>
