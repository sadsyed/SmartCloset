<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewTagFragment">


    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:background="@android:color/transparent"
        android:textColor="@color/sc_teal"
        android:text="Create Account"
        android:id="@+id/createAccountButton"
        android:layout_marginLeft="25dp"
        android:layout_alignTop="@+id/logInButton"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="15dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:background="@android:color/transparent"
        android:textColor="@color/sc_teal"
        android:text="Log In"
        android:id="@+id/logInButton"
        android:layout_toEndOf="@+id/createAccountButton"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_margin="5dp"
        android:layout_alignParentTop="true" />


    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Tap and hold the tag against the back of the phone to mark usage"
        android:id="@+id/readTagEditText"
        android:textColor="@color/sc_teal"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/logInButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />
</RelativeLayout>
