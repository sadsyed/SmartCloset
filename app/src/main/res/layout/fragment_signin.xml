<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SigninFragment"
    android:id="@+id/signin_fragment">

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Smart Closet Inventory"
        android:id="@+id/titleTextView"
        android:textColor="#ff0f0f0f"
        android:textSize="20dp"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="gravity"
        android:gravity="center"
        android:textStyle="bold"
        android:typeface="monospace" />

    <ImageView
        android:id="@+id/separator"
        android:layout_width="320dp"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp"
        android:background="#aa3b3b3b"
        android:layout_below="@+id/titleTextView"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/googleSignInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/google_blue"
        android:drawableLeft="@drawable/btn_google_dark_normal"
        android:drawablePadding="24dp"
        android:text="@string/common_signin_button_text_long"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textAlignment="gravity"
        android:layout_below="@+id/separator"
        android:layout_centerHorizontal="true"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/googleSignUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/google_blue"
        android:drawableLeft="@drawable/btn_google_dark_normal"
        android:drawablePadding="24dp"
        android:text="Sign up with Google"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textAlignment="gravity"
        android:layout_below="@+id/separator"
        android:layout_centerHorizontal="true"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/signoutButton"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:background="@color/sc_teal"
        android:textColor="@color/sc_gray"
        android:textStyle="bold"
        android:textSize="14dp"
        android:textAlignment="center"
        android:text="Logout"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/separator"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
