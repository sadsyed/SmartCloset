<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ssar.smartcloset.UploadImageFragment">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select an image for the new article"
        android:id="@+id/selectImageTextView"
        android:textColor="@color/sc_teal"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:id="@+id/selectedImageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="@string/newtag_select_file_button"
        android:background="@color/sc_teal"
        android:textColor="#D3D3D3"
        android:id="@+id/selectFileButton"
        android:layout_below="@+id/selectedImageView"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/sc_browse"
        android:drawablePadding="8dp"/>

    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@color/sc_teal"
        android:textColor="#D3D3D3"
        android:text="Take a Picture"
        android:id="@+id/takeAPicture"
        android:layout_below="@+id/selectFileButton"
        android:layout_marginTop="5dp"
        android:layout_alignStart="@+id/selectFileButton"
        android:drawableLeft="@drawable/sc_camera"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="9dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/selectedImageView"
        android:textStyle="bold"
        android:textSize="14dp"
        android:textAlignment="gravity"
        android:textColor="@color/sc_gray"
        android:text="Next"
        android:gravity="center|right"
        android:id="@+id/writeTagButton"
        android:background="@color/sc_teal"
        android:drawableRight="@drawable/sc_next"/>

</RelativeLayout>
